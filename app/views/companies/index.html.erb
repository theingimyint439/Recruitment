<% if user_signed_in? %>
<br/>
<div class = "container">
<form action="<%= companies_path %>">
  <div >
    <div>
     <%= link_to 'New Company', new_company_path, class: "btn btn-success btn-lg" %>
    </div>        
    <div  style="text-align: right">
       <input type="text" placeholder="Search" name="search_key" class="form-group">
        <button type="submit" class="btn btn-primary btn-md">Search</button>
      </div>
      </div>
      
    </form>  
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-success">
    <tr>
      <th>Company name</th>
      <th>Country</th>
      <th>Email</th>
      <th>Industry</th>
      <th>Address</th>
      <th>Township</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
    <% if company.user == current_user %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.country %></td>
        <td><%= company.email %></td>
        <td><%= company.industry %></td>
        <td><%= company.address %></td>
        <td><%= company.township %></td>
        <td><%= link_to 'Show', company, class: "btn btn-success btn-md"%>
        <%= link_to 'Edit', edit_company_path(company), class: "btn btn-success btn-md" %>
        <%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-md" %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% else %>
<h1>Hello Website</h1>
This is my website

</div>

<% end %>
