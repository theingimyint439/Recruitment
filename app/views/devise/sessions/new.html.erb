<div class="container d-flex justify-content-center text-center">
<div class="card"  style="width: 36rem;">
  <div class="card-header">

<h2>Log in</h2>
</div>
  <div class="card-body shadow-lg p-1 mb-2 bg-light text-dark ">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Enter Email"%>
  </div><br/>

  <div class="field">
   
    <%= f.password_field :password, autocomplete: "current-password",placeholder:"Enter Email" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class:"btn btn-success"  %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
<br>


